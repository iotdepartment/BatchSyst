@model Batch.Models.Lote

<div class="modal fade" id="evaluarModal-@Model.Id" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header d-flex justify-content-between align-items-center">

                <div class="d-flex align-items-center gap-3 flex-wrap">

                    <h5 class="modal-title fw-bold mb-0">
                        Pruebas del Lote: <span class="text-primary">@Model.Folio</span>
                    </h5>

                    <span class="badge bg-dark">
                        Componente: @Model.Componente?.Name
                    </span>

                    <span class="badge bg-info text-white">
                        Turno: @Batch.Helpers.DiaLaboralHelper.ObtenerTurno(Model.FechaCreacion)
                    </span>

                    <span class="badge bg-secondary">
                        Creado: @Model.FechaCreacion.ToString("yyyy-MM-dd HH:mm")
                    </span>

                </div>

                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col-md-9">
                        <div class="row g-3">
                            @foreach (var resultado in Model.Resultados)
                            {
                                <div class="col-md-4">
                                    <label class="d-flex justify-content-between align-items-center rounded-pill px-3 py-2 bg-light fw-bold">
                                        @resultado.Tolerancia.Prueba
                                        <span id="estado-@resultado.Id">
                                            @if (resultado.Valor.HasValue)
                                            {
                                        @Html.Raw(resultado.EsValido
                                                                                ? "<span class='badge bg-success rounded-pill px-3'>OK</span>"
                                                                                : "<span class='badge bg-danger rounded-pill px-3'>FAIL</span>")
                                                                                }
                                        </span>
                                    </label>

                                    <input type="text"
                                           id="valor-@resultado.Id"
                                           value="@(resultado.Valor.HasValue? resultado.Valor.ToString() : "")"
                                           class="form-control form-control-lg text-center rounded-pill border-2 border-dark-subtle mt-2 fw-bold"
                                           style="font-size: 1.4rem; padding: 1rem 1.2rem;"
                                           readonly
                                           @(Model.Estado != EstadoBatch.PendienteDeLlenado ? "disabled" : "")
                                           onclick="abrirPad(@resultado.Id, @resultado.Tolerancia.Min, @resultado.Tolerancia.Max)" />
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Pad numérico -->
                    <div class="col-md-3 h-100">
                        <div id="numericPad-@Model.Id" class="card p-3 h-100">
                            <div class="row g-3 h-100">
                                @for (int i = 1; i <= 9; i++)
                                {
                                    <div class="col-4 d-flex">
                                        <button type="button"
                                                class="btn btn-secondary btn-lg flex-fill"
                                                style="height:80px;"
                                                onclick="padInput(@Model.Id,'@i')">
                                            @i
                                        </button>
                                    </div>
                                }
                                <div class="col-4 d-flex">
                                    <button type="button"
                                            class="btn btn-danger btn-lg flex-fill"
                                            style="height:80px;"
                                            onclick="padDelete(@Model.Id)">
                                        ⌫
                                    </button>
                                </div>
                                <div class="col-4 d-flex">
                                    <button type="button"
                                            class="btn btn-secondary btn-lg flex-fill"
                                            style="height:80px;"
                                            onclick="padInput(@Model.Id,'0')">
                                        0
                                    </button>
                                </div>
                                <div class="col-4 d-flex">
                                    <button type="button"
                                            class="btn btn-secondary btn-lg flex-fill"
                                            style="height:80px;"
                                            onclick="padInput(@Model.Id,'.')">
                                        .
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Footer -->
                @if (Model.Estado == EstadoBatch.PendienteDeLlenado)
                {
                    <div class="modal-footer d-flex justify-content-center gap-3">

                        <button type="button"
                                class="btn btn-warning px-5 py-3 rounded-pill fw-bold"
                                style="font-size:1.4rem;"
                                onclick="guardarResultados(@Model.Id, false)">
                            Guardar Datos
                        </button>

                        <button type="button"
                                class="btn btn-success px-5 py-3 rounded-pill fw-bold"
                                style="font-size:1.4rem;"
                                onclick="confirmarEnvio(@Model.Id)">
                            Enviar Datos
                        </button>

                    </div>
                }
            </div>
        </div>
    </div>
</div>