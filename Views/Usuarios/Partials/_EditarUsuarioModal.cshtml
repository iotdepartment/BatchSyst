<div class="modal fade" id="modalEditar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header bg-warning">
                <h5 class="modal-title">Editar Usuario</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">

                <!-- ID oculto -->
                <input id="e_id" type="hidden" />

                <!-- Usuario -->
                <label class="form-label fw-semibold">Usuario</label>
                <input id="e_userName" class="form-control mb-3" placeholder="Usuario" />

                <!-- Nombre -->
                <label class="form-label fw-semibold">Nombre</label>
                <input id="e_nombre" class="form-control mb-3" placeholder="Nombre" />

                <!-- Rol -->
                <label class="form-label fw-semibold">Rol</label>
                <select id="e_rol" class="form-select">
                    <option value="Admin">Admin</option>
                    <option value="Operador">Operador</option>
                    <option value="Supervisor">Supervisor</option>
                </select>

            </div>

            <div class="modal-footer">
                <button class="btn btn-warning" onclick="editarUsuario()">Guardar Cambios</button>
            </div>

        </div>
    </div>
</div>