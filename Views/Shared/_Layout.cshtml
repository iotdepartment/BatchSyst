    <script>
        function mostrarToast(mensaje, tipo = "info") {
            const toastContainer = document.getElementById("toastContainer");

            const toast = document.createElement("div");
            toast.className = `toast align-items-center text-bg-${tipo} border-0 show`;
            toast.role = "alert";
            toast.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body">
                        ${mensaje}
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            `;

            toastContainer.appendChild(toast);

            setTimeout(() => {
                toast.remove();
            }, 3000);
        }
    </script>

    <script>
        function cerrarSesion() {

            fetch('/Auth/Logout', {
                method: 'POST'
            })
            .then(r => r.json())
            .then(res => {

                if (res.success) {
                    // ✅ Guardar mensaje para mostrarlo después de redirigir
                    localStorage.setItem("toastMessage", res.message);
                    localStorage.setItem("toastType", "success");

                    // ✅ Redirigir al login
                    window.location.href = "/Auth/Login";
                    return;
                }

                mostrarToast("No se pudo cerrar sesión", "danger");
            })
            .catch(err => {
                console.error(err);
                mostrarToast("Error de red", "danger");
            });
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)

