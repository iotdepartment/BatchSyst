﻿@{
var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
bool isLoginPage = currentController == "Auth" && currentAction == "Login";

}

@using Batch.Helpers
@{
    // Usa la zona horaria de Matamoros
    var zona = TimeZoneInfo.FindSystemTimeZoneById("Central Standard Time (Mexico)");
    var fechaActual = TimeZoneInfo.ConvertTimeFromUtc(DateTime.UtcNow, zona);

    var horaActual = fechaActual.TimeOfDay;

    string turnoActual;
    if (horaActual >= new TimeSpan(7, 0, 0) && horaActual <= new TimeSpan(15, 44, 59))
        turnoActual = "Turno 1";
    else if (horaActual >= new TimeSpan(15, 45, 0) && horaActual <= new TimeSpan(23, 49, 59))
        turnoActual = "Turno 2";
    else
        turnoActual = "Turno 3";
}



