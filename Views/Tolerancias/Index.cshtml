@model IEnumerable<Batch.Models.Tolerancia>

@{
    ViewData["Title"] = "Listado de Tolerancias";
}

<h2>Listado de Tolerancias</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Registro</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Componente</th>
            <th>Prueba</th>
            <th>Max</th>
            <th>Min</th>
            <th>a</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Componente?.Name</td>
                <td>@item.Prueba</td>
                <td>@item.Max</td>
                <td>@item.Min</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>